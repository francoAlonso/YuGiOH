<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="layoutNumPad">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:weightSum">3</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonsPad">
        <item name="android:rotation">-90</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/btnNumpadColor</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="lifePoints">
        <item name="android:textSize">80sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/lifePointsok</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">8000</item>
    </style>


</resources>
